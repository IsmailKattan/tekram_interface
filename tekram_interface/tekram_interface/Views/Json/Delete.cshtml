@model tekram_interface.Models.JsonObject

<h2>Delete JSON Object</h2>

<form asp-action="Delete" asp-route-id="@Model.Text">
    <div class="form-group">
        <label asp-for="Text">Text</label>
        <textarea asp-for="Text" class="form-control" rows="5" readonly>@Model.Text</textarea>
    </div>
    <div class="form-group">
        <label>Keyboard</label>
        <ul>
            @foreach (var item in Model.Keyboard)
            {
                <li>@item.Key: @item.Value</li>
            }
        </ul>
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
</form>
